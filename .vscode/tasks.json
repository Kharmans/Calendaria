{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Lint: ESLint",
      "type": "npm",
      "script": "lint",
      "problemMatcher": [
        "$eslint-stylish"
      ],
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "Lint: ESLint (Fix)",
      "type": "npm",
      "script": "lint:fix",
      "problemMatcher": [
        "$eslint-stylish"
      ]
    },
    {
      "label": "Lint: Stylelint",
      "type": "npm",
      "script": "stylelint",
      "problemMatcher": []
    },
    {
      "label": "Format: Prettier",
      "type": "npm",
      "script": "format",
      "problemMatcher": []
    },
    {
      "label": "Test: Vitest",
      "type": "npm",
      "script": "test",
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "Validate All",
      "type": "npm",
      "script": "validate",
      "problemMatcher": [
        "$eslint-stylish"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
