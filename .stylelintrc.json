{
  "extends": ["stylelint-config-standard"],
  "rules"  : {
    "color-function-notation": "modern",
    "color-named": "never",
    "color-no-hex": true,
    "custom-property-pattern": "^([a-z][a-z0-9]*)(-[a-z0-9]+)*$",
    "declaration-property-unit-allowed-list": { "/^padding|^gap|^margin/": ["rem", "em"], "font-size": ["rem", "em"], "line-height": ["rem", "em"] },
    "function-disallowed-list": ["hex"],
    "function-url-quotes": "always",
    "max-nesting-depth": 5,
    "no-descending-specificity": null,
    "selector-class-pattern": "^[a-z][a-zA-Z0-9]+$|^[a-z][a-z0-9\\-]+[a-z0-9]$",
    "selector-max-compound-selectors": 5,
    "unit-allowed-list": ["%", "deg", "rem", "em", "ms", "vh", "vw", "fr", "s", "ch", "turn"]
  }
}
